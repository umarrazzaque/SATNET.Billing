@model IEnumerable<SATNET.WebApp.Models.Order.OrderViewModel>

@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
    <table id="grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
        <thead>
            <tr>
                <th class="text-center" width="30">
                    <!-- <input type="checkbox"> -->
                </th>
                <th class="text-center">#</th>

                <th> Site </th>
                <th> Request Type </th>
                <th> Customer</th>
                <th> Package</th>
                <th> Date </th>
                <th class="text-center"> Actions </th>
            </tr>
        </thead>

        <tbody>
            @{
                int counter = 0;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"> <input type="checkbox"></td>
                    <td class="text-center text-muted">
                        @{
                            counter++;
                        }
                        @counter
                    </td>
                    <td> @Html.DisplayFor(modelItem => item.SiteName)</td>
                    <td> $ 200</td>
                    <td> @Html.DisplayFor(modelItem => item.RequestTypeName)</td>
                    <td> @Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td> @Html.DisplayFor(modelItem => item.PackageName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceOrderDate)</td>>
                    <td class="text-center">
                        <div class="buttons">
                            <a href="@String.Format("/{0}?id={1}", "Order/Edit", item.Id)" class="pl-1 pr-1 edit-pan">
                                <span class="fa fa-edit" aria-hidden="true"></span>
                            </a>
                            @*<a href="@String.Format("/{0}?id={1}", "Package/Details", item.PackageId)" class="pl-1 pr-1 right-pan">
                                <span class="fa fa-bars" aria-hidden="true"></span>
                            </a>*@
                            <a href="@String.Format("/{0}?id={1}", "Order/Delete", item.Id)" class="pl-1 pr-1 modal-pan"
                               data-toggle="modal" data-target="#modal-deleteConfirm">
                                <span class="fa fa-trash" aria-hidden="true"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
