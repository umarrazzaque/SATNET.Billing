@model SATNET.WebApp.Models.CreateServicePlanModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
<form method="post" data-ajax="true" asp-controller="ServicePlan" asp-action="Edit" data-ajax-method="post"
      enctype="multipart/form-data" id="formAdd" autocomplete="off">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Edit Service Plan
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "ServicePlan/Index")" class=" btn btn-danger">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.ServicePlanModel.Id)

        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanModel.Name, new { })
                @Html.EditorFor(model => model.ServicePlanModel.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Name", @type = "text" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanModel.PlanTypeId, new { })
                @Html.DropDownListFor(model => model.ServicePlanModel.PlanTypeId, new SelectList(Model.PlanType as System.Collections.IEnumerable, "Id", "Name"), "-Select Service Plan Type-", new { @class = "form-control select2 text-input" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanModel.DownloadMIR, new { })
                @Html.EditorFor(model => model.ServicePlanModel.DownloadMIR, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Download Maximum Information Rate", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanModel.UploadMIR, new { })
                @Html.EditorFor(model => model.ServicePlanModel.UploadMIR, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Upload Maximum Information Rate", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanModel.DownloadCIR, new { })
                @Html.EditorFor(model => model.ServicePlanModel.DownloadCIR, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Download CIR", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanModel.UploadCIR, new { })
                @Html.EditorFor(model => model.ServicePlanModel.UploadCIR, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Upload CIR", @type = "decimal" } })
            </div>
        </div>
    </div>
</form>

<!-- /.Main content -->

