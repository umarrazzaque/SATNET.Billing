@model IEnumerable<SATNET.WebApp.Models.Hardware.HardwareComponentRegistrationModel>
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

    <div class="row">
        <div class="col-md-12">
            <label id="import_state_label">@{
                string label_value = "";
                if (Model.Any()) {
                    label_value = Model.Where(c => c.BriefDescription.Contains("Number")).ToList().Count > 0 ? "Error In File!" : "File Import Successfully!";
                }
            }
            @label_value</label>
        </div>
    </div>
    <div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
        <table id="import_grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
            <thead>
                <tr>
                    @*<th class="text-center" width="30">
        </th>*@
                    <th style="width:10%" class="text-center">#</th>
                    <th style="width:20%"> Model </th>
                    <th style="width:25%"> @Html.DisplayNameFor(model => model.AIRMAC) </th>
                    <th style="width:25%"> @Html.DisplayNameFor(model => model.SerialNumber) </th>
                    <th style="width:20%">  </th>
                </tr>
            </thead>

            <tbody>
                @{
                    int counter = 0;

                }
                @foreach (var item in Model)
                {
                <tr>
                    @*<td class="text-center"> <input type="checkbox"></td>*@
                    @{
                        string backgroundClass = "";
                        if (item.BriefDescription.Contains("Number"))
                        {
                            backgroundClass = "td-color";
                        }
                    }
                    <td class="text-center text-muted">
                        @{
                            counter++;
                        }
                        @counter
                    </td>
                    <td class="@backgroundClass"> @Html.DisplayFor(modelItem => item.HardwareComponent)</td>
                    <td class="@backgroundClass"> @Html.DisplayFor(modelItem => item.AIRMAC)</td>
                    <td class="@backgroundClass"> @Html.DisplayFor(modelItem => item.SerialNumber)</td>
                    @{
                        if (item.BriefDescription.Contains("Number"))
                        {
                            <td> @Html.DisplayFor(modelItem => item.BriefDescription)</td>
                        }
                        else { 
                            <td></td>
                        }
                    }
                </tr>
                }


            </tbody>
        </table>

    </div>

<script type="text/javascript">

</script>