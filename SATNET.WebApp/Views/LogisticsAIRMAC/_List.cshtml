@model IEnumerable<SATNET.WebApp.Models.Hardware.HardwareComponentRegistrationModel>
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
    <table id="grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
        <thead>
            <tr>
                @*<th class="text-center" width="30">
        </th>*@
                <th style="width:10%" class="text-center">#</th>
                <th style="width:20%"> Model </th>
                <th style="width:30%"> @Html.DisplayNameFor(model => model.AIRMAC) </th>
                <th style="width:30%"> @Html.DisplayNameFor(model => model.SerialNumber) </th>
                @*<th style="width:10%"> @Html.DisplayNameFor(model => model.IsUsed) </th>*@
                <th style="width:10%" class="text-center"> Actions </th>
            </tr>
        </thead>

        <tbody>
            @{
                int counter = 0;
            }
            @foreach (var item in Model)
            {
            <tr>
                @*<td class="text-center"> <input type="checkbox"></td>*@
                <td class="text-center text-muted">
                    @{
                        counter++;
                    }
                    @counter
                </td>
                <td> @Html.DisplayFor(modelItem => item.HardwareComponent)</td>
                <td> @Html.DisplayFor(modelItem => item.AIRMAC)</td>
                <td> @Html.DisplayFor(modelItem => item.SerialNumber)</td>

                @*@if (item.IsUsed)
                {
                    <td>
                        No
                    </td>
                }
                else
                {
                    <td>
                        Yes
                    </td>
                }*@
                <td class="text-center">
                    <div class="buttons">
                        <a href="@String.Format("/{0}?id={1}", "LogisticsAIRMAC/Edit", item.Id)" class="pl-1 pr-1">
                            <span class="fa fa-edit" aria-hidden="true"></span>
                        </a>
                        @if (!item.IsUsed)
                        {
                            <a href="@String.Format("/{0}?id={1}", "LogisticsAIRMAC/Delete", item.Id)" class="pl-1 pr-1 modal-pan"
                               data-toggle="modal" data-target="#modal-deleteConfirm">
                                <span class="fa fa-trash" aria-hidden="true"></span>
                            </a>
                        }
                        </div>
                </td>
            </tr>
            }


        </tbody>
    </table>

</div>

