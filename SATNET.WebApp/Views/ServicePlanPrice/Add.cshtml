@model SATNET.WebApp.Models.CreateServicePlanPriceModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
@*@await Component.InvokeAsync("ContentHead", @Model.MenuModel)*@
<form method="post" data-ajax="true" asp-controller="ServicePlanPrice" asp-action="Add" data-ajax-method="post"
      enctype="multipart/form-data" id="formAdd" autocomplete="off">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Add Service Plan Price
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "ServicePlanPrice/Index")" class=" btn btn-danger">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.ServicePlanId, new { })
                @Html.DropDownListFor(model => model.ServicePlanPriceModel.ServicePlanId, new SelectList(Model.ServicePlanList as System.Collections.IEnumerable, "Id", "Name"), "-Select Service Plan-", new { @class = "form-control select2 text-input" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.PriceTierId, new { })
                @Html.DropDownListFor(model => model.ServicePlanPriceModel.PriceTierId, new SelectList(Model.PriceTierList as System.Collections.IEnumerable, "Id", "Name"), "-Select Service Plan-", new { @class = "form-control select2 text-input" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.Price, new { })
                @Html.EditorFor(model => model.ServicePlanPriceModel.Price, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Price", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.Markup, new { })
                @Html.EditorFor(model => model.ServicePlanPriceModel.Markup, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Markup", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.MarkupPercent, new { })
                @Html.EditorFor(model => model.ServicePlanPriceModel.MarkupPercent, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Markup %", @type = "decimal" } })
            </div>
        </div>
</form>


<!-- /.Main content -->

