@model SATNET.WebApp.Models.CreateServicePlanPriceModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
@*@await Component.InvokeAsync("ContentHead", @Model.MenuModel)*@
<form method="post" data-ajax="true" asp-controller="ServicePlanPrice" asp-action="Add" data-ajax-method="post"
      enctype="multipart/form-data" id="formAdd" autocomplete="off">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Add Service Plan Price
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "ServicePlanPrice/Index")" class=" btn btn-danger">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save Plan Price</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.PlanTypeId, new { })
                @Html.DropDownListFor(model => model.ServicePlanPriceModel.PlanTypeId, new SelectList(Model.ServicePlanTypeList as System.Collections.IEnumerable, "Id", "Name"), "-Select Plan Type-", new { @class = "form-control select2 text-input" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.ServicePlanId, new { })
                @Html.DropDownListFor(model => model.ServicePlanPriceModel.ServicePlanId, new SelectList(Model.ServicePlanList as System.Collections.IEnumerable, "Id", "Name"), "-Select Service Plan-", new { @class = "form-control select2 text-input", @disabled = "true" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.PriceTierId, new { })
                @Html.DropDownListFor(model => model.ServicePlanPriceModel.PriceTierId, new SelectList(Model.PriceTierList as System.Collections.IEnumerable, "Id", "Name"), "-Select Price Tier-", new { @class = "form-control select2 text-input", @disabled = "true" })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.ServicePlanPriceModel.Price, new { })
                @Html.EditorFor(model => model.ServicePlanPriceModel.Price, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Price", @type = "decimal" } })
            </div>
        </div>
    </div>
</form>


<!-- /.Main content -->

<script language="javascript" type="text/javascript">
    //$.validator.unobtrusive.parse('#formAdd');

    $('#ServicePlanPriceModel_ServicePlanId').change(function () {
        var servicePlanId = $('#ServicePlanPriceModel_ServicePlanId').val();
        var url = '/ServicePlanPrice/GetFilteredPlanPrice';
        $.getJSON(url, { servicePlanId: servicePlanId, mode: 'add' }, function (result) {
            console.log(result);
            var items = '';
            items += "<option value=''>-Select Price Tier-</option>";
            $.each(result, function (i, plan) {
                items += "<option value='" + plan.value + "'>" + plan.text + "</option>";
            });
            $('#ServicePlanPriceModel_PriceTierId').removeAttr('disabled');
            $('#ServicePlanPriceModel_PriceTierId').empty();
            $('#ServicePlanPriceModel_PriceTierId').html(items);
        });
    });
    $('#ServicePlanPriceModel_PlanTypeId').change(function () {
        var planTypeId = $('#ServicePlanPriceModel_PlanTypeId').val();
        if (planTypeId === '') {
            $('#ServicePlanPriceModel_ServicePlanId').empty();
            var items = "<option value=''>-Select Service Plan-</option>";
            $('#ServicePlanPriceModel_ServicePlanId').html(items);
            $('#ServicePlanPriceModel_ServicePlanId').attr('disable', 'diabled');
            alert();
            return;
        }

        var url = '/ServicePlanPrice/GetFilteredServicePlan';
        $.getJSON(url, { planTypeId: planTypeId }, function (result) {
            console.log(result);
            var items = '';
            items += "<option value=''>-Select Service Plan-</option>";
            $.each(result, function (i, plan) {
                items += "<option value='" + plan.value + "'>" + plan.text + "</option>";
            });
            $('#ServicePlanPriceModel_ServicePlanId').removeAttr('disabled');
            $('#ServicePlanPriceModel_ServicePlanId').empty();
            $('#ServicePlanPriceModel_ServicePlanId').html(items);
        });
    });
</script>