@model IEnumerable<SATNET.WebApp.Models.ServicePlanPriceModel>
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
    <table id="grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
        <thead>
            <tr>
                <th class="text-center" width="30">
                    <!-- <input type="checkbox"> -->
                </th>
                <th class="text-center">#</th>
                <th> @Html.DisplayNameFor(model => model.ServicePlanId) </th>
                <th> @Html.DisplayNameFor(model => model.PriceTierId) </th>
                <th> @Html.DisplayNameFor(model => model.Price) </th>
                <th> @Html.DisplayNameFor(model => model.Markup)</th>
                <th> @Html.DisplayNameFor(model => model.MarkupPercent) </th>
                <th> @Html.DisplayNameFor(model => model.BriefDescription) </th>
                <th class="text-center"> Actions </th>
            </tr>
        </thead>

        <tbody>
            @{
                int counter = 0;
            }
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center"> <input type="checkbox"></td>
                <td class="text-center text-muted">
                    @{
                        counter++;
                    }
                    @counter
                </td>
                <td> @Html.DisplayFor(modelItem => item.ServicePlanName)</td>
                <td> @Html.DisplayFor(modelItem => item.PriceTierName)</td>
                <td> @Html.DisplayFor(modelItem => item.Price)</td>
                <td> @Html.DisplayFor(modelItem => item.Markup)</td>
                <td> @Html.DisplayFor(modelItem => item.MarkupPercent)</td>
                <td> @Html.DisplayFor(modelItem => item.BriefDescription)</td>
                <td class="text-center">
                    <div class="buttons">
                        <a href="@String.Format("/{0}?id={1}", "ServicePlanPrice/Edit", item.Id)" class="pl-1 pr-1">
                            <span class="fa fa-edit" aria-hidden="true"></span>
                        </a>
                        <a href="@String.Format("/{0}?id={1}", "ServicePlanPrice/Details", item.Id)" class="pl-1 pr-1 right-pan">
                            <span class="fa fa-bars" aria-hidden="true"></span>
                        </a>
                        <a href="@String.Format("/{0}?id={1}", "ServicePlanPrice/Delete", item.Id)" class="pl-1 pr-1 modal-pan"
                           data-toggle="modal" data-target="#modal-deleteConfirm">
                            <span class="fa fa-trash" aria-hidden="true"></span>
                        </a>
                    </div>
                </td>
            </tr>
            }


        </tbody>
    </table>

</div>

