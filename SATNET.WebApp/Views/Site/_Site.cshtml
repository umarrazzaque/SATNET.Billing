@model IEnumerable<SATNET.WebApp.Models.SiteModel>

@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
    <table id="grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
        <thead>
            <tr>
                @*<th class="text-center" width="30"></th>*@
                <th class="text-center">#</th>
                <th width="15%"> @Html.DisplayNameFor(model => model.Name) </th>
                <th width="20%"> @Html.DisplayNameFor(model => model.SubscriberId) </th>
                <th width="10%"> @Html.DisplayNameFor(model => model.Area) </th>
                <th width="15%"> @Html.DisplayNameFor(model => model.ServicePlan) </th>
                <th width="10%"> @Html.DisplayNameFor(model => model.StatusId) </th>
                <th width="15%"> @Html.DisplayNameFor(model => model.Promotion) </th>
                <th width="15%"> @Html.DisplayNameFor(model => model.NextBillingDate) </th>

                <th class="text-center"> Detail </th>
            </tr>
        </thead>

        <tbody>
            @{
                int counter = 0;
            }
            @foreach (var item in Model)
            {
            <tr>
                @*<td class="text-center"> <input type="checkbox"></td>*@
                <td class="text-center text-muted">
                    @{
                        counter++;
                    }
                    @counter
                </td>
                <td> @Html.DisplayFor(modelItem => item.Name)</td>
                <td> @Html.DisplayFor(modelItem => item.SubscriberName)</td>
                <td> @Html.DisplayFor(modelItem => item.Area)</td>
                <td> @Html.DisplayFor(modelItem => item.ServicePlan)</td>
                <td> @Html.DisplayFor(modelItem => item.Status)</td>
                <td> @Html.DisplayFor(modelItem => item.Promotion)</td>
                <td>
                    @if (item.NextBillingDate != null)
                    {
                        @item.NextBillingDate.ToShortDateString();
                    }

                </td>

                <td class="text-center">
                    <div class="buttons">
                        @*<a href="@String.Format("/{0}?id={1}", "Site/Edit", item.Id)" class="pl-1 pr-1">
                    <span class="fa fa-edit" aria-hidden="true"></span>
                </a>*@
                        <a href="@String.Format("/{0}?id={1}", "Site/Details", item.Id)" class="pl-1 pr-1 right-pan">
                            <span class="fa fa-bars" aria-hidden="true"></span>
                        </a>
                        @*<a href="@String.Format("/{0}?id={1}", "Site/Delete", item.Id)" class="pl-1 pr-1 modal-pan"
                   data-toggle="modal" data-target="#modal-deleteConfirm">
                    <span class="fa fa-trash" aria-hidden="true"></span>
                </a>*@
                    </div>
                </td>
            </tr>
            }


        </tbody>
    </table>

</div>
