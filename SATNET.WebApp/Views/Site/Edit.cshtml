@model SATNET.WebApp.Models.CreateSiteModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
<form method="post" data-ajax="true" asp-controller="Site" asp-action="Edit" data-ajax-method="post"
      enctype="multipart/form-data" id="formAdd" autocomplete="off">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Edit Site
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "Site/Index")" class=" btn btn-danger">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.SiteModel.Id)
        @Html.HiddenFor(model => model.SiteModel.CustomerId)
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.SiteModel.Name, new { })
                @Html.EditorFor(model => model.SiteModel.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Site Name", @type = "text", @value = "ZXC", @readonly = "readonly" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.SiteModel.City, new { })
                @Html.EditorFor(model => model.SiteModel.City, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "City", @type = "text" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.SiteModel.Area, new { })
                @Html.EditorFor(model => model.SiteModel.Area, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Area", @type = "text" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.SiteModel.Status, new { })
                @Html.DropDownListFor(model => model.SiteModel.StatusId, new SelectList(Model.SiteStatus as System.Collections.IEnumerable, "Id", "Name"), "-Select Site Status-", new { @class = "form-control select2 text-input" })

            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.SiteModel.Subscriber, new { })
                @Html.EditorFor(model => model.SiteModel.Subscriber, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Subscriber", @type = "text" } })
            </div>

        </div>
</form>

<!-- /.Main content -->

<script language="javascript" type="text/javascript">
    $.validator.unobtrusive.parse('#formAdd');

</script>
