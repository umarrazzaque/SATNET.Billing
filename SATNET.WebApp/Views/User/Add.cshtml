@model SATNET.WebApp.Models.User.UserViewModel
@*@inject SATNET.Domain.Enums.LookupTypes*@


<form id="formAdd" method="post" data-ajax="true" asp-controller="User" asp-action="Add" data-ajax-method="post" enctype="multipart/form-data" autocomplete="off">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Add User
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "User/Index")" class=" btn btn-danger">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save User</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-3">
            <div class="form-group">
                <label>User Type</label>
                <select asp-for="UserTypeId" asp-items="Model.UserTypeSelectList" class="form-control select2 text-input">
                    <option value="">-Select Users Type-</option>
                </select>
                <span asp-validation-for="UserTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label>Customer</label>
                <select disabled asp-for="CustomerId" asp-items="Model.CustomerSelectList" class="form-control select2 text-input">
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label>Roles</label>
                <select disabled asp-for="RoleName" class="form-control select2 text-input">
                    <option value="" hidden disabled selected>-Select Role-</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                <label asp-for="FirstName" class="lable-control"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="LastName" class="lable-control"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        @*<div class="col-lg-3">
            <div class="position-relative form-group">
                <label asp-for="UserName" class="lable-control"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>*@
        <div class="col-lg-3">
            <div class="position-relative form-group">
                <label asp-for="Email" class="lable-control"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                <label asp-for="Password" class="lable-control"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                <label asp-for="ConfirmPassword" class="lable-control"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        @*<div class="col-lg-3">
                <div class="position-relative form-group">
                <div class="form-group">
                    <label class="lable-control">Select Role</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" value="Admin" id="radioAdmin" asp-for="Roles">
                    <label class="form-check-label" for="radioAdmin">Admin</label>
                </div>
                <!-- Material inline 2 -->
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" value="User" id="radioUser" asp-for="Roles" checked="checked">
                    <label class="form-check-label" for="radioUser">User</label>
                </div>
            </div>
        </div>*@
    </div>
</form>


@section scripts{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
    <script src="~/js/user/user-add.js"></script>

}

