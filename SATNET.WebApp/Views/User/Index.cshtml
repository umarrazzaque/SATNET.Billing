@model IEnumerable<SATNET.WebApp.Models.User.UserViewModel>

<div id="MainContents">

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">

                <div>
                    Users
                    <div class="page-title-subheading">
                    </div>
                </div>
            </div>
            <div class="page-title-actions">

                <div class="d-inline-block dropdown">

                    <div class="dropdown d-inline-block">
                        <button type="button" data-toggle="dropdown" class="mb-0 ml-2  btn  btn btn-info">Export  <i class="fa fa-angle-down ml-2"></i></button>
                        <div tabindex="-1" role="menu" class="dropdown-menu">
                            <button type="button" tabindex="0" class="dropdown-item">PDF</button>
                            <button type="button" tabindex="0" class="dropdown-item">CSV</button>
                            <button type="button" tabindex="0" class="dropdown-item">Print</button>
                        </div>
                    </div>
                    <a href="@String.Format("/{0}", "User/Add")" class=" btn btn-default">
                        Add User
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="filters">
        <div class="row">
            <div class="col-lg-2">
                <div class="position-relative form-group">
                    <select id="selectUserType" type="select" class="form-control" asp-items="ViewBag.UserTypeSelectList">
                        <option value="">User Type</option>
                    </select>
                </div>
            </div>

            @*<div class="col-lg-2">
                <div class="position-relative form-group">

                    <select type="select" class="form-control ">
                        <option value="">Customer</option>
                        <option>value</option>
                        <option>value</option>
                    </select>
                </div>
            </div>*@

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="BodyContent">
                @await Html.PartialAsync("_UserList", Model)
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/user/user-list.js"></script>
}



