@model IEnumerable<SATNET.WebApp.Models.Invoice.SOInvoiceViewModel>

<div id="MainContents">

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">

                <div>
                    Service Order Invoices
                    <div class="page-title-subheading">
                    </div>
                </div>
            </div>
            <div class="page-title-actions">

                <div class="d-inline-block dropdown">

                    <div class="dropdown d-inline-block">
                        <button type="button" data-toggle="dropdown" class="mb-0 ml-2  btn  btn btn-info">Export  <i class="fa fa-angle-down ml-2"></i></button>
                        <div tabindex="-1" role="menu" class="dropdown-menu">
                            <button type="button" tabindex="0" class="dropdown-item">PDF</button>
                            <button type="button" tabindex="0" class="dropdown-item">CSV</button>
                            <button type="button" tabindex="0" class="dropdown-item">Print</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="filters">
        <div class="row">
            <div class="col-lg-2">
                <div class="position-relative form-group">
                    <select id="ddlInvoiceStatus" type="select" class="form-control" asp-items="ViewBag.InvoiceStatusSelectList">
                        <option value="0" selected>All</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="BodyContent">
                @await Html.PartialAsync("_List", Model)
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#ddlInvoiceStatus').val(71);
            $(".filters select").change(function () {
                var statusId = $(this).val();
                GetInvoiceList(statusId);

            });

        });

GetInvoiceList = function (statusId) {
                $.ajax(
                    {
                        url: '/SOInvoice/FilterInvoiceList',
                        data: { statusId: statusId },
                        type: 'get',
                        dataType: "html",
                        success: function (html) {
                            if (html !== null) {
                                $("#BodyContent").html(html);
                            }
                        },
                        error: function () {
                            alert('Error occurred while processing the request.');
                        }
                    });
            }


    </script>
}