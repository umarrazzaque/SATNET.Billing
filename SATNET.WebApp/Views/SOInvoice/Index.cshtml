@model IEnumerable<SATNET.WebApp.Models.Invoice.SOInvoiceViewModel>

<div id="MainContents">

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">

                <div>
                    Service Order Invoices
                    <div class="page-title-subheading">
                    </div>
                </div>
            </div>
            <div class="page-title-actions">

                @await Html.PartialAsync("_Export")
            </div>
        </div>
    </div>

    <div class="filters">
        <div class="row">
            <div class="col-lg-2">
                <div class="position-relative form-group">
                    <select id="ddlInvoiceStatus" type="select" class="form-control" asp-items="ViewBag.InvoiceStatusSelectList">
                        <option value="0" selected>All</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="BodyContent">
                @await Html.PartialAsync("_List", Model)
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            init_table_pagination('grid_table');
        });
        $(function () {
            $('#ddlInvoiceStatus').val(71);
            $(".filters select").change(function () {
                var statusId = $(this).val();
                GetInvoiceList(statusId);

            });

        });

GetInvoiceList = function (statusId) {
                $.ajax(
                    {
                        url: '/SOInvoice/FilterInvoiceList',
                        data: { statusId: statusId },
                        type: 'get',
                        dataType: "html",
                        success: function (html) {
                            if (html !== null) {
                                $("#BodyContent").html(html);
                                init_table_pagination('grid_table');
                            }
                        },
                        error: function () {
                            alert('Error occurred while processing the request.');
                        }
                    });
            }


    </script>
}