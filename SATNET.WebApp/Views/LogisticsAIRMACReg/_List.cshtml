@model IEnumerable<SATNET.WebApp.Models.Hardware.HardwareComponentRegistrationModel>

@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive dataTables_wrapper dt-bootstrap4 mt-2">
    <table id="grid_table" class="align-middle  table table-sm table-hover dataTable" role="grid" aria-describedby="">
        <thead>
            <tr>
                @*<th class="text-center" width="30">
        </th>*@
                <th style="width:10%" class="text-center">#</th>
                <th class="text-left" style="width:15%"> Model </th>
                <th class="text-left" style="width:20%"> AIRMAC </th>
                <th class="text-left" style="width:20%"> Serial Number</th>
                <th class="text-left" style="width:20%"> Customer </th>
                <th class="text-left" style="width:10%"> Is Available</th>
                <th class="text-center" style="width:05%"> Actions</th>
            </tr>
        </thead>

        <tbody>

            @{
                int counter = 0;
            }
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
            <tr>
                @*<td class="text-center"> <input type="checkbox"></td>*@
                <td class="text-center text-muted">
                    @{
                        counter++;
                    }
                    @counter
                </td>
                <td>@item.HardwareComponent </td>
                <td>@item.AIRMAC </td>
                <td>@item.SerialNumber </td>
                <td>@item.CustomerName </td>
                @if (item.IsUsed)
                {
                    <td>
                        No
                    </td>
                }
                else
                {
                    <td>
                        Yes
                    </td>
                }
                <td class="text-center">
                    <div class="buttons">
                        <a title="Unregister AIRMAC" id="lnkUnRegisterAirmac" href="@String.Format("/{0}?airmac={1}", "LogisticsAIRMACReg/UnRegisterAirMac", item.AIRMAC)" class="pl-1 pr-1 modal-pan"
                           data-toggle="modal" data-target="#modal-deleteConfirm">
                            <i class="icofont-close-line-squared"></i>
                        </a>
                    </div>
                </td>
            </tr>
                }

            }


        </tbody>
    </table>

</div>

