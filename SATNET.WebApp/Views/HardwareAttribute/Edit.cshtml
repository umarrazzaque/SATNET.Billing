@model SATNET.WebApp.Models.Lookup.CreateLookUpModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
    <form method="post" data-ajax="true" asp-controller="HardwareAttribute" asp-action="Edit" data-ajax-method="post"
          enctype="multipart/form-data" id="formAdd" autocomplete="off">
        @Html.HiddenFor(model => model.LookUpModel.Id)
        @Html.HiddenFor(model => model.LookUpModel.LookUpTypeId)
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>
                        Edit Modem Model
                        <div class="page-title-subheading">
                            Please fillout following form
                        </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <div class="d-inline-block dropdown">
                        <a href="@String.Format("/{0}", "HardwareAttribute/Index")" class=" btn btn-danger">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-default">Save Record</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-6">
                <div class="form-group">
                    @Html.Label("Hardware Attribute")
                    @Html.DropDownListFor(model => model.LookUpModel.LookUpTypeId, new SelectList(Model.LookupType as System.Collections.IEnumerable, "Id", "Name"), "-Select Hardware Attribute-", new { @class = "form-control select2 text-input", @disabled = true })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative form-group">
                    @Html.LabelFor(model => model.LookUpModel.Name, new { })
                    @Html.EditorFor(model => model.LookUpModel.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Modem Model Name ", @type = "text" } })
                </div>
            </div>
            <div class="col-lg-12">
                <div class="position-relative form-group">
                    @Html.LabelFor(model => model.LookUpModel.Description, new { })
                    @Html.EditorFor(model => model.LookUpModel.Description, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Description", @type = "text" } })
                </div>
            </div>
        </div>
    </form>

<!-- /.Main content -->

