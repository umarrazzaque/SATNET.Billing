@model SATNET.WebApp.Models.PackageModelList


@await Component.InvokeAsync("ContentHead", @Model.MenuModel)

<!-- Main content -->

<section class="content">
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <a class="btn btn-success right-pan pl-3 pr-3" href="@String.Format("/{0}", "Package/Add")">
                    <span class='fa fa-plus' aria-hidden='true'></span> &nbsp;Add
                </a>
            </div>
            <div id="BodyContent">
                @await Html.PartialAsync("_PackageList", Model)
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</section>

<script type="text/javascript">

    $(function () {
        var t = $("#grid_table").DataTable({
            
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "columnDefs": [
                { "orderable": false, "targets": 5 },
                { "orderable": false, "targets": 0 }
            ],
            //"columnDefs": [
            //    {
            //        'targets': 0, // column index (start from 0)bb
            //        'orderable': false, // set orderable false for selected columns
            //    }],
        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    });

</script>

