@model SATNET.WebApp.Models.CreatePackageModel
@*@{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    }*@

<!-- Main content -->
<form method="post" data-ajax="true" asp-controller="Package" asp-action="Edit" data-ajax-method="post"
      enctype="multipart/form-data" id="formAdd" autocomplete="off">
    @Html.HiddenFor(model => model.PackageModel.PackageId)
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    Edit Package
                    <div class="page-title-subheading">
                        Please fillout following form
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <div class="d-inline-block dropdown">
                    <a href="@String.Format("/{0}", "Package/Reset")" class=" btn btn-danger right-pan">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-default">Save Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.PackageModel.PackageId)
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.PackageModel.Name, new { })
                @Html.EditorFor(model => model.PackageModel.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Package Name", @type = "text" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.PackageModel.Speed, new { })
                @Html.EditorFor(model => model.PackageModel.Speed, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Speed", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.PackageModel.PackageType, new { })
                @Html.DropDownListFor(model => model.PackageModel.PackageType, new SelectList(Model.PackageTypesList as System.Collections.IEnumerable, "PackageTypeId", "PackageTypeName"), "-Select Package Type-", new { @class = "form-control select2 text-input" })

            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                @Html.LabelFor(model => model.PackageModel.Rate, new { })
                @Html.EditorFor(model => model.PackageModel.Rate, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Rate", @type = "decimal" } })
            </div>
        </div>
        <div class="col-lg-3">
            <div class="position-relative form-group">
                <label class="">Expiry Date</label>
                <input type="date" placeholder="..." class="form-control" value="">
            </div>
        </div>
    </div>
</form>

<!-- /.Main content -->

<script language="javascript" type="text/javascript">
    $.validator.unobtrusive.parse('#formAdd');

</script>
